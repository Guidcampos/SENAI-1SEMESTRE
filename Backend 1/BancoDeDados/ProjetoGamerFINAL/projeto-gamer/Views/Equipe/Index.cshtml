@model Equipe

@{
    ViewData["Title"] = "Equipe";
}
<link rel="stylesheet" href="~/css/equipes.css" asp-append-version="true"/>

<!-- MAIN -->
<main>

    @if (ViewBag.Username == null)
    {

        <a class="navbar-brand" asp-area="" asp-controller="Login"
            asp-action="Index">Login</a>
    }
    else
    {


        <section class="container-grid cadastro-equipes">


            <form class="frm-cad-equipe" method="post"
                action="@Url.Action("Cadastrar")" enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                @* <input class="campo-entrada" type="number" id="idEquipe"
            placeholder="Digite o Id da sua equipe:"> *@
                <input class="campo-entrada" name="Nome" type="text"
                    placeholder="Digite o nome da sua equipe:" required>


                <label class="foto" for="foto-file">
                   
                    <input type="file" name="Imagem" id="foto-file"
                        onchange="mostrarNomeArquivo(this)">
                    <span id="nome-arquivo">Nenhuma imagem selecionada...</span>
                </label>


                <button type="submit">Cadastro</button>


            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </thead>
                <tbody>
                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <tr>
                            <td>@equipe.IdEquipe</td>
                            <td>@equipe.Nome</td>
                            <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da
                            equipe
                            @equipe.Nome" width="50px"></td>
                            <td id="edit-remove">
                                <a asp-area="" asp-controller="Equipe"
                                    asp-action="Excluir"
                                    asp-route-id="@equipe.IdEquipe"><img
                                        class="yellow-trash" src="~/assets/trash.png"
                                        alt="">
                                </a>

                                <a asp-area="" asp-controller="Equipe"
                                    asp-action="Editar"
                                    asp-route-id="@equipe.IdEquipe"><img
                                        class="yellow-trash" src="~/assets/edit.svg"
                                        alt=""></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </section>
    }
</main>

@* mostrar nome do arquivo ao dar upload *@
<script>
    function mostrarNomeArquivo(input) {
        if (input.files.length > 0) {
            var nomeArquivo = input.files[0].name;
            document.getElementById("nome-arquivo").textContent = nomeArquivo;
        } else {
            document.getElementById("nome-arquivo").textContent = "Nenhuma imagem selecionada...";
        }
    }
</script>

