@model Jogador

@{
    ViewData["Title"] = "Jogadores";
}


<h1>Tela de jogadores</h1>


<form method="post" action="@Url.Action("Cadastrar")">

    <label for="">Nome</label>
    <input type="text" name="Nome" required>

    <label for="">Email</label>
    <input type="email" name="Email" required>

    <label for="">Senha</label>
    <input type="password" name="Senha" required >

    <select name="IdEquipe" id="">
        <option value="0">Selecione uma Equipe</option>
        @foreach (var c in ViewBag.Equipe)
        {
            <option value="@c.IdEquipe">@c.Nome</option>
        }
    </select>


    

    <button type="submit">Cadastrar</button>
</form>





<table class="table table-striped table-responsive table-dark">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Equipe</th>
        <th>Ações</th>
    </thead>

    <tbody>
        @foreach (Jogador jogador in ViewBag.Jogador)
        {
            <tr>
                <td>@jogador.IdJogador</td>
                <td>@jogador.Nome</td>
                <td>@jogador.Email</td>
                <td>
                    <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="Imagem da
                    equipe @jogador.Equipe.Nome" width="50px">
                </td>
                <td>
                    <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                        asp-route-id="@jogador.IdJogador">Excluir</a>
                    <a asp-area="" asp-controller="Jogador" asp-action="Editar"
                        asp-route-id="@jogador.IdJogador">Editar</a>

                </td>
            </tr>
        }

    </tbody>
</table>
                